<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg51"
    tools:context=".Sellers.SellerRegistrationActivity">



    <ImageView
        android:id="@+id/seller_white"
        android:layout_width="312dp"
        android:layout_height="572dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_white" />

    <ImageView
        android:id="@+id/seller_pic"
        android:layout_width="581dp"
        android:layout_height="329dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="-40dp"
        android:rotation="60"
        android:src="@drawable/snowman" />

    <TextView
        android:id="@+id/title_seller"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="Seller Registeration"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_seller"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:hint="Name..."
        android:inputType="text"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:hint="Phone..."
        android:inputType="number"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/seller_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_phone"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/seller__login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_login_email"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/seller_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller__login_password"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/baloo"
        android:hint="Shop-Bussiness Address...."
        android:inputType="textEmailAddress"
        android:textSize="12dp" />

    <Button
        android:id="@+id/seller_login_btn"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:layout_below="@+id/seller_address"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/baloo"
        android:text="Register"
        android:textAllCaps="true"
        android:textColor="@android:color/white"


        android:textSize="24sp" />

    <Button
        android:id="@+id/seller_already_have_account_btn"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_login_btn"
        android:layout_marginTop="80dp"
        android:background="@color/colorWhite"
        android:fontFamily="@font/baloo"
        android:text="◄ Already have an Account? ►"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp" />

</RelativeLayout>